<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{name}}!</h2>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Create a New Drawing</h3>

        <form class="form new-drawing-form">
            <div class="form-group">
                <label for="drawing-name">Drawing name:</label>
                <input class="form-input" type="text" id="drawing-name" name="drawing-name" />
            </div>
            <div class="form-group">
                <label for="drawing-desc">Description:</label>
                <textarea class="form-input" id="drawing-desc" name="drawing-desc"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>

    {{#if drawings.length}}
    <div class="col-md-6 drawing-list">
        <h3>Current drawings:</h3>

        {{#each drawings as |drawing|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href="/drawing/{{drawing.id}}">{{drawing.name}}</a></h4>
            </div>
            <div class="col-md-4">
                <button class="btn btn-sm btn-danger" data-id="{{drawing.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<script src="./js/profile.js"></script>