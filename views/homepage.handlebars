        <h2>
            <!-- Call helper function with triple brackets to render the emoji span as HTML -->
            <a href="/drawing/{{drawing.id}}">{{drawing.name}}</a>
        </h2>


    </div>
    <div class="col-md-7">
        <p>
            {{drawing.description}}
        </p>
    </div>
</div>
